<?xml version="1.0" encoding="UTF-8" ?>  
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.ganway.hr.dao.IFamilyDao">
	<resultMap id="BaseResultMap" type="com.ganway.hr.vo.TbFamily">
		<result column="id" property="id" jdbcType="CHAR" />
		<result column="basicId" property="basicId" jdbcType="CHAR" />
		<result column="name" property="name" jdbcType="VARCHAR" />
		<result column="relation" property="relation" jdbcType="VARCHAR" />
		<result column="age" property="age"
			jdbcType="VARCHAR" />
		<result column="residence" property="residence" jdbcType="VARCHAR" />
		<result column="company" property="company" jdbcType="VARCHAR" />
		<result column="post" property="post" jdbcType="VARCHAR" />
		<result column="employeeCode" property="employeeCode" jdbcType="VARCHAR" />
	</resultMap>

	<sql id="Base_Column_List">
		id,basicId,name,relation,age,residence,company,post,employeeCode
	</sql>

	

	<!-- 插入家庭成员 -->
	<insert id="insertFamily" parameterType="com.ganway.hr.vo.TbFamily">
		insert into tb_family
		<trim prefix="(" suffix=")" suffixOverrides=",">
			<if test="id != null">
				id,
			</if>
			<if test="basicId != null">
				basicId,
			</if>
			<if test="name != null">
				name,
			</if>
			<if test="relation != null">
				relation,
			</if>
			<if test="age != null">
				age,
			</if>
			<if test="residence != null">
				residence,
			</if>
			<if test="company != null">
				company,
			</if>
			<if test="post != null">
				post,
			</if>
			<if test="employeeCode != null">
				employeeCode
			</if>

		</trim>
		<trim prefix="values (" suffix=")" suffixOverrides=",">
			<if test="id != null">
				#{id,jdbcType=CHAR},
			</if>
			<if test="basicId != null">
				#{basicId,jdbcType=CHAR},
			</if>
			<if test="name != null">
				#{name,jdbcType=VARCHAR},
			</if>
			<if test="relation != null">
				#{relation,jdbcType=VARCHAR},
			</if>
			<if test="age != null">
				#{age,jdbcType=VARCHAR},
			</if>
			<if test="residence != null">
				#{residence,jdbcType=VARCHAR},
			</if>
			<if test="company != null">
				#{company,jdbcType=VARCHAR},
			</if>
			<if test="post != null">
				#{post,jdbcType=VARCHAR},
			</if>
			<if test="employeeCode != null">
				#{employeeCode,jdbcType=VARCHAR}
			</if>
			
		</trim>
	</insert>

	<delete id="deleteByPrimaryKey" parameterType="java.lang.String">
		delete from tb_family
		where ID = #{id,jdbcType=CHAR}
	</delete>
	
	<select id="queryByBasicId" parameterType="java.lang.String" resultMap="BaseResultMap">
		select  
        <include refid="Base_Column_List" />  
        from tb_family
        where basicId = #{basicId,jdbcType=CHAR}
	</select>

</mapper>  